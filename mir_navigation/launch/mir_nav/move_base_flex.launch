<launch>

  <arg name="prefix" default="" doc="Prefix used for robot tf frames" /> <!-- used in the config files -->

  <!-- Move Base Flex -->
  <node pkg="mbf_costmap_nav" type="mbf_costmap_nav" respawn="false" name="move_base_flex" output="screen">
    <param name="tf_timeout" value="1.5"/>
    <param name="planner_max_retries" value="3"/>
    <param name="SBPLLatticePlanner/primitive_filename" value="$(find mir_navigation)/mprim/unicycle_highcost_5cm.mprim" />
    <rosparam file="$(find mir_navigation)/config/planners.yaml" command="load" />
    <rosparam file="$(find mir_navigation)/config/controllers.yaml" command="load" />
    <rosparam file="$(find mir_navigation)/config/recovery_behaviors.yaml" command="load" />
    <rosparam file="$(find mir_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find mir_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find mir_navigation)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find mir_navigation)/config/local_costmap_params.yaml" command="load" />
  </node>
</launch>
